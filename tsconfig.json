{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "types": [".ts",".tsx",".js",".d.ts"], 
    "typeRoots": ["types","./src/interfaces/*"],
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["./src"],
	"exclude": ["node_modules","**/*.spec.ts","declarations"],
}
